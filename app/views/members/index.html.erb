<h3>Leaders Board</h3>

<% if @leader_boards_members.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Member Name</th>
        <th>Total Matches</th>
        <th>Average Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @leader_boards_members.each do |member| %>
        <tr>
          <td><%= member_full_name(member[:member]) %></td>
          <td><%= member[:total_match] %></td>
          <td><%= member[:average_score] %></td>
          <td><%= link_to 'Show', member[:member] %></td>
          <td><%= link_to 'Edit', edit_member_path(member[:member]) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <strong>No member available that have played at-least 10 matches</strong>
<% end %>
